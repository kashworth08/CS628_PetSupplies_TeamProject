{
  "name": "MERN Dev Container",
  "image": "mcr.microsoft.com/vscode/devcontainers/javascript-node:0-14",
  "workspaceFolder": "/workspace",  // Make sure the repository is mounted here
  "mounts": [
    "source=${localWorkspaceFolder},target=/workspace,type=bind"  // Explicitly mount the local workspace folder to the container
  ],
  "forwardPorts": [
    3000,
    5000,
    27017
  ],
  "postCreateCommand": "sudo apt-get update && sudo apt-get install -y mongodb && sudo service mongodb start && npm install",
  "customizations": {
    "vscode": {
      "extensions": [
        "dbaeumer.vscode-eslint",
        "esbenp.prettier-vscode",
        "ms-azuretools.vscode-docker"
      ],
      "settings": {
        "terminal.integrated.shell.linux": "/bin/bash"
      }
    }
  }
}

